<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections><log4net>
  <!-- 函数错误日志类-->
  <logger name="logFuncError">
    <level value="ALL" />
    <appender-ref ref="FuncErrorAppender" />
  </logger>
  <!-- 函数错误日志附加介质-->
  <appender name="FuncErrorAppender" type="log4net.Appender.RollingFileAppender">
    <param name="File" value="logs\\FuncError\\" />
    <param name="AppendToFile" value="true" />
    <param name="MaxSizeRollBackups" value="100" />
    <param name="MaxFileSize" value="10240" />
    <param name="StaticLogFileName" value="false" />
    <param name="DatePattern" value="yyyyMMdd&quot;.html&quot;" />
    <param name="RollingStyle" value="Date" />
    <!--布局-->
    <layout type="log4net.Layout.PatternLayout">
      <param name="ConversionPattern" 
			value="
			&lt;table border=&quot;1px&quot; cellspacing=&quot;0&quot; style=&quot;margin-bottom:-2px&quot;&gt;
				&lt;tr&gt;
					&lt;td&gt;
						Time: %d
					&lt;&#47;td&gt;
					&lt;td&gt;
						Thread: %t
					&lt;&#47;td&gt;
					&lt;td&gt;
						Level: %p
					&lt;&#47;td&gt;
					&lt;td&gt;
						Class: %c [%x]
					&lt;&#47;td&gt;
					&lt;td&gt;
						Error Message: %m
					&lt;&#47;td&gt;
					&lt;td&gt;
						Exception Detail: %exception
					&lt;&#47;td&gt;
				&lt;&#47;tr&gt;
			&lt;&#47;table&gt;"
		/>
    </layout>
  </appender>
  <!-- 操作日志类 -->
  <logger name="logUserOperation">
    <level value="ALL" />
    <appender-ref ref="UserOperationAppender" />
  </logger>
  <!-- 操作日志附加介质-->
  <appender name="UserOperationAppender" type="log4net.Appender.RollingFileAppender">
    <param name="File" value="logs\\UserOperations\\" />
    <param name="AppendToFile" value="true" />
    <param name="MaxFileSize" value="10240" />
    <param name="MaxSizeRollBackups" value="100" />
    <param name="StaticLogFileName" value="false" />
    <param name="DatePattern" value="yyyyMMdd&quot;.html&quot;" />
    <param name="RollingStyle" value="Date" />
    <!-- 信息日志布局-->
    <layout type="log4net.Layout.PatternLayout">
      <param name="ConversionPattern" 
			value="
			&lt;table border=&quot;1px&quot; cellspacing=&quot;0&quot; style=&quot;margin-bottom:-2px&quot;&gt;
				&lt;tr&gt;
					&lt;td&gt;
						Time: %d
					&lt;&#47;td&gt;
					&lt;td&gt;
						Thread: %t
					&lt;&#47;td&gt;
					&lt;td&gt;
						Level: %p
					&lt;&#47;td&gt;
					&lt;td&gt;
						Class: %c [%x]
					&lt;&#47;td&gt;
					%m
				&lt;&#47;tr&gt;
			&lt;&#47;table&gt;"
		/>
    </layout>
  </appender>
</log4net>
</configuration>